<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.Sobre"
             Title="Sobre"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#8E2DE2" Offset="1.0"/>
            <GradientStop Color="#FF6A88" Offset="0.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <ContentPage.Resources>
        <Style x:Key="Titulo" TargetType="Label">
            <Setter Property="HorizontalTextAlignment" Value="Center"/>
            <Setter Property="VerticalTextAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="50"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="FontFamily" Value="KalamBold"/>
            <Setter Property="TextColor" Value="DarkViolet"/>

        </Style>
        <Style TargetType="Label">
            <Setter Property="HorizontalTextAlignment" Value="Start"/>
            <Setter Property="VerticalTextAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>
        
    </ContentPage.Resources>
    
    <VerticalStackLayout VerticalOptions="Center"
                         Spacing="10"
                         Padding="10">

        <Grid RowDefinitions="*,*,*,*"
              ColumnDefinitions="*,*"
              ColumnSpacing="10"
              RowSpacing="10"
              Margin="10">

            <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource Titulo}" Text="Agenda 13"/>
            <Label Grid.Row="1" Grid.Column="0" Text="Desenvolvido por:"/>
            <Label Grid.Row="1" Grid.Column="1" Text="Leonardo Petraitis"/>
            <Label Grid.Row="2" Grid.Column="0" Text="Curso:"/>
            <Label Grid.Row="2" Grid.Column="1" Text="TÃ©cnico em Desenvolvimento de Sistemas"/>
            <Label Grid.Row="3" Grid.Column="0" Text="Ano:"/>
            <Label Grid.Row="3" Grid.Column="1" Text="2025"/>

        </Grid>

        <Button Text="Voltar"
                Clicked="Button_Clicked"
                Margin="10"
                BackgroundColor="{StaticResource Leo}"/>
        
    </VerticalStackLayout>
</ContentPage>